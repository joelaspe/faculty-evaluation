<div class="container">    
    <table class="table table-condensed">
        <tr>
            <td><h3>Calendar Year:</h3></td>
            <td><%= @report.report_year %></td>
        </tr>
        <tr>
            <td><h3>Faculty Name:</h3></td>
            <td><%= "#{@person.first_name} #{@person.last_name}" %></td>
        </tr>
        <tr>
            <td><h3>Rank:</h3></td>
            <td><%= @person.position %></td>
        </tr>
        <tr>
            <td><h3>Department:</h3></td>
            <td><%= @report.department %></td>
        </tr>
   </table>
</div> 

<h3>Scholarship:</h3>

<% @publications.each do |publication| %>
    <p>
        <strong>Type:</strong>
        <%= publication.publication_type.titleize %>
    </p>
    <p>
        <strong>Text:</strong>
        <%= publication.body %>
    </p>
    <p>
        <strong>URL:</strong>
        <%= publication.url %>
    </p>

-----------------------------------------<br>
<% end %>
    
<h3>Course Information</h3>

<% @courses.each do |course| %>
    <p>
        <strong>Year:</strong>
        <%= course.year %>
    </p>
    <p>
        <strong>Semester:</strong>
        <%= course.semester %>
    </p>
    <p>
        <strong>Course Number:</strong>
        <%= course.course_number %>
    </p>
    <p>
        <strong>Course Title:</strong>
        <%= course.course_title %>
    </p>
    <p>
        <strong>Number Enrolled:</strong>
        <%= course.enrollment %>
    </p>
    <p>
        <strong>Evaluation Results:</strong>
        <%= course.evaluation_results %>
    </p>
    <p>
        <strong>Taught Course:</strong>
        <%= course.taught? ? 'Yes' : 'No' %>
    </p>

-----------------------------------------<br>
<% end %>

<h3>Professional Services Information</h3>

<% @professional_services.each do |professional_service| %>
    <p>
        <strong>Activity:</strong>
        <%= professional_service.title %>
    </p>
    <p>
        <strong>Description:</strong>
        <%= professional_service.description %>
    </p>

-----------------------------------------<br>
<% end %>

