<% end %>

<h3>Research Mentoring</h3>

<% @mentees.each do |mentee| %>
    <p>
        <strong>Mentee Type:</strong>
        <%= mentee.mentee_type %>
    </p>
    <p>
        <strong>First Name:</strong>
        <%= mentee.first_name %>
    </p>
    <p>
        <strong>Middle Name:</strong>
        <%= mentee.middle_name %>
    </p>
    <p>
        <strong>Last Name:</strong>
        <%= mentee.last_name %>
    </p>
    <p>
        <strong>Banner ID:</strong>
        <%= mentee.banner_id %>
    </p>
    <p>
        <strong>Study Stage:</strong>
        <%= mentee.study_stage %>
    </p>
    <p>
        <strong>Expected Graduation Date:</strong>
        <%= mentee.expected_graduation %>
    </p>
    <p>
        <strong>Support Source:</strong>
        <%= mentee.support_source %>
    </p>
    <p>
        <strong>Placement:</strong>
        <%= mentee.placement %>
    </p>

------------------------------------------<br>
<% end %>

<div class="container">
    <table class="table table-condensed">
        <tr>
            <td><h3>Self Evaluation:</h3></td>
            <td><%= @report.self_evaluation_text %></td>
        </tr>
        <tr>
            <td><h3>Future Plans:</h3></td>
            <td><%= @report.future_plans_text %></td>
        </tr>
   </table>
</div>


